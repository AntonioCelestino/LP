<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>pesquisaProduto</from-outcome>
            <to-view-id>/pesquisaProduto.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>pesquisaFornecedor</from-outcome>
            <to-view-id>/pesquisaFornecedor.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>fornecedorControllerBean</managed-bean-name>
        <managed-bean-class>controller.fornecedorControllerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>produtoControllerBean</managed-bean-name>
        <managed-bean-class>controller.produtoControllerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/pesquisaFornecedor.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>manageFornecedor</from-outcome>
            <to-view-id>/manterFornecedor.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/manterFornecedor.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>fornecedor</from-outcome>
            <to-view-id>/pesquisaFornecedor.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pesquisaProduto.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>manageProduto</from-outcome>
            <to-view-id>/manterProduto.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/manterProduto.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>produto</from-outcome>
            <to-view-id>/pesquisaProduto.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
